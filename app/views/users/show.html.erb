<h1>Show User</h1>
<p>
	<strong>First Name</strong>:
	<%= @user.first_name %>
</p>

<p>
	<strong>Last Name</strong>:
	<%= @user.last_name %>
</p>

<p>
	<strong>Avatar</strong>:
	<%= image_tag(@user.avatar.url) %>
</p>
<p>
	<strong>Role</strong>:
	<%= @user.role %>
</p>
<p>
	<strong>Email Address</strong>:
	<%= @user.email %>
</p>

<p>
	<strong>Password</strong>:
	<%= @user.password.inspect %>
</p>

<%= link_to 'Back', users_path %>