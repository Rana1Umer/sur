<%= form_with(model: @survey, local: true) do |form| %>

<% if current_user.role == "admin" %>

<p>
	<%= form.label :due_date %><br>
	<%= form.date_select :due_date %>
</p>

<p>
	<%= form.label :Assign_user %>:    
	<%= form.select :user_id, options_from_collection_for_select(User.all, "id", "first_name") %>
</p>

<% else %>

<p>
	<%= form.label :name %>:
	<%= form.text_field :name %>
</p>

<p>
	<%= form.label :gender %>:

	<%= form.radio_button :gender, 'Male' %>
	<%= form.label :gender, 'Male' %>

	<%= form.radio_button :gender, 'Female' %>
	<%= form.label :gender, 'Female' %>
</p>

<p>
	<%= form.label :province %>:
	<%= form.select :province, ['select','Punjab', 'Sindh', 'Balochistan', 'Khyber Pakhtunkhwa'] %>
</p>

<p>
	<%= form.label :interest %>:

	<%= form.check_box :interest, {:multiple => true}, 'Music', nil %>
	<%= form.label :Music %>
	<%= form.check_box :interest, {:multiple => true}, 'Art', nil %>
	<%= form.label :Art %>
	<%= form.check_box :interest, {:multiple => true}, 'Religion', nil %>
	<%= form.label :Religion %>
	<%= form.check_box :interest, {:multiple => true}, 'Movies', nil %>
	<%= form.label :Movies %>
	<%= form.check_box :interest, {:multiple => true}, 'Politics', nil %>
	<%= form.label :Politics %>
	<%= form.check_box :interest, {:multiple => true}, 'Science', nil %>
	<%= form.label :Science %>
	<%= form.check_box :interest, {:multiple => true}, 'Math', nil %>
	<%= form.label :Math %>
</p>

<p>
	<%= form.label :biography %>:
	<%= form.text_area :biography %>
</p>
<%end%>

<p>
	<%= form.submit ({:class => 'btn btn-primary'}) %>
</p>

<%end%>